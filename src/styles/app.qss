/* Application QSS - minimal, light/dark, blue-accent theme */

/* General */
QWidget {
    font-family: "Segoe UI", "Helvetica", Arial;
    font-size: 10pt;
}
QWidget[themeClass="dark"] {
    background: #020617;
    color: #e5e7eb;
}
QWidget[themeClass="light"] {
    background: #f4f6fb;
    color: #0f172a;
}

/* Плавные переходы реализуются через Qt анимации, не через QSS */

/* Group boxes as cards - более заметные границы для модулей */
QGroupBox {
    border-radius: 8px;
    margin-top: 6px;
    padding: 8px 10px;
}
QGroupBox[themeClass="dark"] {
    border: 1px solid rgba(31, 41, 55, 0.8); /* более заметная граница */
    background: rgba(2, 6, 23, 0.4); /* более заметный фон для выделения модуля */
    margin-bottom: 8px; /* дополнительный отступ между модулями */
}
QGroupBox[themeClass="light"] {
    border: 1px solid rgba(209, 213, 219, 0.9); /* более заметная граница */
    background: rgba(255, 255, 255, 0.4); /* более заметный фон для выделения модуля */
    margin-bottom: 8px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 3px;
}

/* Buttons – flat minimal */
QPushButton {
    border-radius: 6px;
    padding: 4px 10px;
    min-height: 28px;
    min-width: 84px;
    font-weight: 500;
    qproperty-iconSize: 16px 16px;
    border: 1px solid transparent;
}

QPushButton[themeClass="dark"] {
    background: transparent;
    color: #e5e7eb;
    border-color: rgba(17, 24, 39, 0.5);
}
QPushButton[themeClass="dark"]:hover {
    background: rgba(17, 24, 39, 0.3);
    border-color: rgba(31, 41, 55, 0.6);
}
QPushButton[themeClass="dark"]:pressed {
    background: #020516;
    border-color: #0b1120;
}
QPushButton[themeClass="dark"]:disabled {
    background: #020617;
    border-color: #020617;
    color: #6b7280;
}

QPushButton[themeClass="light"] {
    background: transparent;
    color: #0f172a;
    border-color: rgba(203, 213, 245, 0.5);
}
QPushButton[themeClass="light"]:hover {
    background: rgba(237, 242, 255, 0.6);
    border-color: rgba(156, 180, 255, 0.7);
}
QPushButton[themeClass="light"]:pressed {
    background: #dbe4ff;
    border-color: #7c91ff;
}
QPushButton[themeClass="light"]:disabled {
    background: #f3f4f7;
    border-color: #e5e7eb;
    color: #9ca3af;
}

QPushButton:focus {
    outline: none;
}

/* Primary / secondary / danger / ghost */
QPushButton[class~="primary"][themeClass="dark"] {
    background: #1d4ed8;
    border-color: #1d4ed8;
    color: #f9fafb;
}
QPushButton[class~="primary"][themeClass="dark"]:hover {
    background: #2563eb;
}
QPushButton[class~="primary"][themeClass="dark"]:pressed {
    background: #1e40af;
}

QPushButton[class~="primary"][themeClass="light"] {
    background: #2563eb;
    border-color: #2563eb;
    color: #f9fafb;
}
QPushButton[class~="primary"][themeClass="light"]:hover {
    background: #1d4ed8;
}
QPushButton[class~="primary"][themeClass="light"]:pressed {
    background: #1e40af;
}

QPushButton[class~="secondary"][themeClass="dark"] {
    background: transparent;
    border-color: rgba(17, 24, 39, 0.5);
    color: #e5e7eb;
}
QPushButton[class~="secondary"][themeClass="dark"]:hover {
    background: rgba(17, 24, 39, 0.3);
}

QPushButton[class~="secondary"][themeClass="light"] {
    background: transparent;
    border-color: rgba(209, 213, 219, 0.6);
    color: #111827;
}
QPushButton[class~="secondary"][themeClass="light"]:hover {
    background: rgba(229, 240, 255, 0.6);
}

QPushButton[class~="danger"][themeClass="dark"] {
    background: #b91c1c;
    border-color: #b91c1c;
    color: #f9fafb;
}
QPushButton[class~="danger"][themeClass="dark"]:hover {
    background: #dc2626;
}

QPushButton[class~="danger"][themeClass="light"] {
    background: #ef4444;
    border-color: #ef4444;
    color: #ffffff;
}
QPushButton[class~="danger"][themeClass="light"]:hover {
    background: #dc2626;
}

QPushButton[class~="ghost"] {
    background: transparent;
    border-color: transparent;
    min-width: 64px;
    padding: 4px 8px;
    border-radius: 6px;
    color: inherit;
}
QPushButton[class~="ghost"][themeClass="dark"]:hover {
    background: rgba(148, 163, 184, 0.12);
}
QPushButton[class~="ghost"][themeClass="light"]:hover {
    background: rgba(37, 99, 235, 0.08);
}

QPushButton[class~="icon-only"] {
    min-width: 32px;
    padding: 4px 6px;
}

